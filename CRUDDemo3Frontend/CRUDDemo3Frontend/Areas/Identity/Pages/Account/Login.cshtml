@page "/Login"
@using CRUDDemo3Frontend.Areas.Identity.Pages.Account;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model LoginModel2

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>

<h6 class="text-danger">@ViewData["ErrorMessage"]</h6>
<div class="row">
    <div class="col-md-4">
        
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input2.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input2.Email" class="form-label"></label>
                    <span asp-validation-for="Input2.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input2.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input2.Password" class="form-label"></label>
                    <span asp-validation-for="Input2.Password" class="text-danger"></span>
                </div>
                
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>                
            </form>
        <br />

            <p>Don't have an account? </p>
            <p>Register here:</p> <div>
                <a href="/Register">Register</a>
            </div>
    </div>   
</div>




